{
  "manifest_version": 3,
  "name": "IronHide",
  "version": "1.0.0",
  "description": "Chrome Extension for Tab Opacity Control & Privacy",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "IronHide - Privacy Control"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-privacy": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "Toggle privacy mode"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}